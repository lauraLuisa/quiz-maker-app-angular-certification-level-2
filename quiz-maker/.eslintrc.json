        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "extends": [
                "@team23/eslint-config-team23-ts",
                "@team23/eslint-config-team23-angular"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.html"
            ],
            "extends": [
                "@team23/eslint-config-team23-angular"
            ],
            "rules": {}
        },
        {
            "files": [
                "*routing.module.ts"
            ],
            "rules": {
                "@typescript-eslint/promise-function-async": "off"
            }
        }
